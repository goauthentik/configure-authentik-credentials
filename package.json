{
  "name": "configure-authentik-credentials",
  "description": "Use this action to authenticate to an application protected by authentik using the JWT token generated by GitHub Actions.",
  "version": "1.0.1",
  "author": "authentik Team <hello@goauthentik.io>",
  "private": true,
  "homepage": "https://github.com/goauthentik/configure-authentik-credentials",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goauthentik/configure-authentik-credentials.git"
  },
  "bugs": {
    "url": "https://github.com/goauthentik/configure-authentik-credentials/issues"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "JEST_JUNIT_CLASSNAME=\"{filepath}\" npx jest --reporters=jest-junit",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "cobertura",
      "text"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/http-client": "^2.2.3",
    "jwt-decode": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.0",
    "@jest/globals": "^30.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.7",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.32.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.30.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsonc": "^2.20.1",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.2.0",
    "jest": "^30.0.3",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}
